<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category Form View -->
    <record id="view_patrimoine_category_form" model="ir.ui.view">
        <field name="name">patrimoine.equipment.category.form</field>
        <field name="model">patrimoine.equipment.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_equipment" icon="fa-wrench"
                                invisible="equipment_count == 0">
                            <field name="equipment_count" widget="statinfo" string="Équipements"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description de la catégorie..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Category Tree View -->
    <record id="view_patrimoine_category_tree" model="ir.ui.view">
        <field name="name">patrimoine.equipment.category.tree</field>
        <field name="model">patrimoine.equipment.category</field>
        <field name="arch" type="xml">
            <tree string="Catégories">
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
                <field name="equipment_count"/>
            </tree>
        </field>
    </record>

    <!-- Category Action -->
    <record id="action_patrimoine_category" model="ir.actions.act_window">
        <field name="name">Catégories d'Équipements</field>
        <field name="res_model">patrimoine.equipment.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
