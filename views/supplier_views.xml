<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Form View -->
    <record id="view_patrimoine_supplier_form" model="ir.ui.view">
        <field name="name">patrimoine.supplier.form</field>
        <field name="model">patrimoine.supplier</field>
        <field name="arch" type="xml">
            <form string="Fournisseur">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_equipment" icon="fa-wrench">
                            <field name="equipment_count" widget="statinfo" string="Équipements"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="supplier_type"/>
                            <field name="rating"/>
                        </group>
                        <group>
                            <field name="contact_person"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email" widget="email"/>
                            <field name="website" widget="url"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Adresse" name="address">
                            <group>
                                <group>
                                    <field name="street" placeholder="Rue..."/>
                                    <field name="street2" placeholder="Rue 2..."/>
                                    <field name="city" placeholder="Ville..."/>
                                </group>
                                <group>
                                    <field name="state_id" placeholder="Province..."/>
                                    <field name="zip" placeholder="Code postal..."/>
                                    <field name="country_id" placeholder="Pays..."/>
                                </group>
                            </group>
                        </page>

                        <page string="Informations Commerciales" name="commercial">
                            <group>
                                <group>
                                    <field name="tax_id"/>
                                    <field name="payment_terms" placeholder="Conditions de paiement..."/>
                                </group>
                            </group>
                            <group>
                                <field name="products_services" placeholder="Produits et services proposés..."/>
                            </group>
                            <group>
                                <field name="warranty_policy" placeholder="Politique de garantie..."/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Supplier Tree View -->
    <record id="view_patrimoine_supplier_tree" model="ir.ui.view">
        <field name="name">patrimoine.supplier.tree</field>
        <field name="model">patrimoine.supplier</field>
        <field name="arch" type="xml">
            <tree string="Fournisseurs">
                <field name="name"/>
                <field name="code"/>
                <field name="supplier_type"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="rating"/>
                <field name="equipment_count"/>
            </tree>
        </field>
    </record>

    <!-- Supplier Kanban View -->
    <record id="view_patrimoine_supplier_kanban" model="ir.ui.view">
        <field name="name">patrimoine.supplier.kanban</field>
        <field name="model">patrimoine.supplier</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="supplier_type"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="rating"/>
                <field name="equipment_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="supplier_type"/>
                                </div>
                                <div t-if="record.phone.value">
                                    <i class="fa fa-phone"/> <field name="phone"/>
                                </div>
                                <div t-if="record.email.value">
                                    <i class="fa fa-envelope"/> <field name="email"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="rating"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span>
                                            <field name="equipment_count"/> équipements
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Supplier Action -->
    <record id="action_patrimoine_supplier" model="ir.actions.act_window">
        <field name="name">Fournisseurs</field>
        <field name="res_model">patrimoine.supplier</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
